require 'rake'

PROTO_DIR = 'lib/forest_admin_rpc_agent/proto'.freeze
OUTPUT_DIR = 'lib/forest_admin_rpc_agent'.freeze

namespace :proto do
  desc 'generate ruby files from proto files'
  task :generate do
    sh "grpc_tools_ruby_protoc -I #{PROTO_DIR} " \
       "--ruby_out=#{OUTPUT_DIR} " \
       "--grpc_out=#{OUTPUT_DIR} " \
       "#{PROTO_DIR}/rpc.proto"
  end
end
